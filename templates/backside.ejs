  <link rel="stylesheet" href="/bootstrap/css/bootstrap.css">
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/css/backside.css">
  <title>Gymmy-後台管理</title>
</head>

<body>
  <div class="overlay-statement">
    <div class="statement-block1">
      <div class="statement-block">
        <div class="statement-page">
          <label for="state-close-btn">
            <img id="close-btn-for-img-statement" src="/png/icon/icon_close.png">
          </label>
          <input type="button" name="close" id="state-close-btn">
          <div class="title-block-state">
            <div class="num">#</div>
            <div class="username">學員名稱</div>
            <div class="email">電子信箱</div>
          </div>
